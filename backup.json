[{"model": "admin.logentry", "pk": 1, "fields": {"action_time": "2025-03-09T13:01:58.368Z", "user": 1, "content_type": 7, "object_id": "1", "object_repr": "Example", "action_flag": 1, "change_message": "[{\"added\": {}}]"}}, {"model": "admin.logentry", "pk": 2, "fields": {"action_time": "2025-03-21T12:05:07.361Z", "user": 1, "content_type": 7, "object_id": "2", "object_repr": "Blog post 2", "action_flag": 1, "change_message": "[{\"added\": {}}]"}}, {"model": "admin.logentry", "pk": 3, "fields": {"action_time": "2025-03-29T11:10:58.573Z", "user": 1, "content_type": 4, "object_id": "2", "object_repr": "Redina", "action_flag": 1, "change_message": "[{\"added\": {}}]"}}, {"model": "admin.logentry", "pk": 4, "fields": {"action_time": "2025-03-29T11:11:24.489Z", "user": 1, "content_type": 4, "object_id": "2", "object_repr": "Redina", "action_flag": 2, "change_message": "[{\"changed\": {\"fields\": [\"First name\", \"Last name\", \"Superuser status\"]}}]"}}, {"model": "admin.logentry", "pk": 5, "fields": {"action_time": "2025-03-29T11:12:25.319Z", "user": 1, "content_type": 7, "object_id": "3", "object_repr": "Fuelled by Passion: The Secret to Lasting Support", "action_flag": 1, "change_message": "[{\"added\": {}}]"}}, {"model": "admin.logentry", "pk": 6, "fields": {"action_time": "2025-03-29T15:07:34.214Z", "user": 1, "content_type": 7, "object_id": "2", "object_repr": "Blog post 2", "action_flag": 3, "change_message": ""}}, {"model": "admin.logentry", "pk": 7, "fields": {"action_time": "2025-03-29T15:07:34.214Z", "user": 1, "content_type": 7, "object_id": "1", "object_repr": "Example", "action_flag": 3, "change_message": ""}}, {"model": "admin.logentry", "pk": 8, "fields": {"action_time": "2025-03-30T13:24:41.992Z", "user": 1, "content_type": 7, "object_id": "4", "object_repr": "Six Fundraising Trends for Christian Charities to Watch in 2025", "action_flag": 1, "change_message": "[{\"added\": {}}]"}}, {"model": "admin.logentry", "pk": 9, "fields": {"action_time": "2025-0